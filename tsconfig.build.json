{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "exclude": ["**/*.stories.*", "**/__tests__/**", "storybook-static"],
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false, // âœ… Emit both .js and .d.ts
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  }
}
