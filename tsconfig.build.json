  "include": ["src"],
  "exclude": ["**/*.stories.*", "**/__tests__/**", "storybook-static"],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "composite": true
  }
}
